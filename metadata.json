{
    "version": "1.0.0", 
    "defaultFile": "contracts/Loan.sol", 
    "environment": "solidity", 
    "setupCommands": [ 
        "npm i",
        "npx hardhat compile"
    ],
    "compileCommand": "npx hardhat compile", 
    "tests": [ 
        { "itShould": "Compile",  "command": "sh learn_tests/01.sh" },
