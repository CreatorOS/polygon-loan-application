{
    "version": "1.0.0", 
    "defaultFile": "contracts/Bank.sol", 
    "environment": "solidity", 
    "setupCommands": [ 
        "npm i",
        "npx hardhat compile"
    ],
    "compileCommand": "npx hardhat compile", 
    "tests": [ 
        { "itShould": "Compile",  "command": "sh learn_tests/01.sh" },
        { "itShould": "Deploy to dummy blockchain",  "command": "sh learn_tests/02.sh" },
        { "itShould": "Create a function",  "command": "sh learn_tests/03.sh" },
        { "itShould": "Create a function that deposits incorrectly",  "command": "sh learn_tests/04.sh" },
        { "itShould": "Send money to the Bank Contract correctly",  "command": "sh learn_tests/05.sh" },
        { "itShould": "Get the balance",  "command": "sh learn_tests/06.sh" },
        { "itShould": "Withdraw the balance",  "command": "sh learn_tests/07.sh" }
    ],
    "learnerAccessibleFileList": [
        "contracts/*"
    ]
}